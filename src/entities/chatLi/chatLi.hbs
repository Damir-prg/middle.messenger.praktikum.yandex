<li class='chat-list-item'>
  <div class='chat-list-item__avatar'>
    {{#if imageSrc}}
      <img src='{{imageSrc}}' alt='' class='chat-list-item__avatar__user-image' />
    {{/if}}
  </div>
  <p class='chat-list-item__content'>
    <h4 class='chat-list-item__user-name'>{{userName}}</h4>
    <p class='chat-list-item__last-message'>{{lastMessage}}</p>
  </p>
  <p class='chat-list-item__info'>
    <span class='chat-list-item__time'>{{time}}</span>
    <div class='chat-list-item__unreaded-count'>{{unreadedCount}}</div>
  </p>
</li>