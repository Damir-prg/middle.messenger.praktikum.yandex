{{#>ProfileUl}}

  {{#>ProfileLi}}
    <span>Почта</span>
    {{#if isEdit}}
       {{> Input isProfile=true
          type='email'
          name='email'
          id='email'
          value='pochta@yandex.ru'
          placeholder='Введите почту'}}
          {{else}}
      <span>pochta@yandex.ru</span>
    {{/if}}
  {{/ProfileLi}}

  {{#>ProfileLi}}
    <span>Логин</span>
    {{#if isEdit}}
       {{> Input isProfile=true
          type='text'
          name='login'
          id='login'
          value='ivanivanov'
          placeholder='Введите логин'}}
       {{else}}
          <span>ivanivanov</span>
    {{/if}}
  {{/ProfileLi}}
  
  {{#>ProfileLi}}
    <span>Имя</span>
    {{#if isEdit}}
       {{> Input isProfile=true
          type='text'
          name='first_name'
          id='first_name'
          value='Иван'
          placeholder='Введите имя'}}
      {{else}}
         <span>Иван</span>
    {{/if}}
  {{/ProfileLi}}

  {{#>ProfileLi}}
    <span>Фамилия</span>
    {{#if isEdit}}
       {{> Input isProfile=true
          type='text'
          name='second_name'
          id='second_name'
          value='Иванов'
          placeholder='Введите фамилию'}} 
      {{else}}
         <span>Иванов</span>
    {{/if}} 
    
  {{/ProfileLi}}

  {{#>ProfileLi}}
    <span>Имя в чате</span>
    {{#if isEdit}}
       {{> Input isProfile=true
          type='text'
          name='display_name'
          id='display_name'
          value='Иван'
          placeholder='Введите никнейм'}} 
      {{else}}
         <span>Иван</span>
    {{/if}}
  {{/ProfileLi}}

  {{#>ProfileLi}}
    <span>Телефон</span>
    {{#if isEdit}}
       {{> Input isProfile=true
          type='tel'
          name='phone'
          id='phone'
          value='+7 (909) 967 30 30'
          placeholder='Введите номер телефона'}} 
      {{else}}
         <span>+7 (909) 967 30 30</span>
    {{/if}}
  {{/ProfileLi}}
{{/ProfileUl}}