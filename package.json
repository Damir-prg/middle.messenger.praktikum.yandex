{
  "name": "sprint_1",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "format": "prettier --write \"src/**/*.{js,ts,css,md,json,hbs}\" --config ./.prettierrc",
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "vite build && vite preview",
    "preview": "vite preview"
  },
  "devDependencies": {
    "handlebars": "^4.7.8",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-tsconfig-paths": "^4.2.2"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.8.1"
  },
  "lint-staged": {
    "*.{js,ts,hbs}": [
      "pretty-quick --staged",
      "eslint --fix"
    ]
  }
}
