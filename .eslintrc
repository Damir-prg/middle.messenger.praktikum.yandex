{
  "plugins": ["prettier"],
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "prettier/prettier": [
    "error",
    {
      "tabWidth": 2,
      "printWidth": 120,
      "semi": true,
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": true
    }
  ],
  "arrow-body-style": "off",
  "camelcase": "error",
  "spaced-comment": "error",
  "quotes": ["error", "single"]
}
